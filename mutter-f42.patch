+++ b/src/backends/native/meta-gpu-kms.c
@@ -351,6 +351,8 @@ init_outputs (MetaGpuKms *gpu_kms)
       MetaOutput *old_output;
       GError *error = NULL;
 
+      meta_unlink_kms_connector (kms_connector);
+
       if (!meta_kms_connector_get_current_state (kms_connector))
         continue;
 
diff --git a/src/backends/native/meta-output-kms.c b/src/backends/native/meta-output-kms.c
index 52d4b7988..975345232 100644
--- a/src/backends/native/meta-output-kms.c
+++ b/src/backends/native/meta-output-kms.c
@@ -99,6 +99,17 @@ meta_output_kms_from_kms_connector (MetaKmsConnector *connector)
                              kms_connector_output_kms_quark);
 }
 
+void
+meta_unlink_kms_connector (MetaKmsConnector *connector)
